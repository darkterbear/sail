<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/promiseCards"
    android:backgroundTint="@color/colorPrimaryDark"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/promiseTextGroup"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/promiseTitleTextView"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:maxLength="40"
            android:maxLines="2" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contentLayout">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personDateLayout">

                <TextView
                    android:text="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/promisePersonTextView"
                    android:paddingLeft="12dp"
                    android:paddingBottom="4dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:maxLength="20"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/goalDateTextView"
                    android:text="Mar. 20 2017"
                    android:paddingLeft="12dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:foregroundGravity="right"
                    android:gravity="right|end"
                    android:layout_gravity="right"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/promiseDescriptionTextView"
                android:paddingLeft="12dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorAccent"
                android:paddingRight="8dp"
                android:textSize="14sp"
                android:maxLines="3"
                android:maxLength="90"
                android:text="Placeholding Text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/promiseButtonsGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:paddingRight="16dp"
            android:backgroundTint="@color/colorAccent"
            android:background="@color/colorAccent">

            <ImageButton
                android:id="@+id/promiseDoneButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/check" />

            <ImageButton
                android:id="@+id/promiseStarButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:src="@drawable/star_outline" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>